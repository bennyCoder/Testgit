<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.system.Profile">

<RelativeLayout
    android:background="#B0E0E6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.android.system.Profile"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">



    <TextView
        android:id="@+id/textViewUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:text="larger text" />


    <TextView
        android:id="@+id/editProvfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:text="Edidt your profile" />



    <TextView
        android:id="@+id/names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:layout_below="@id/main"/>


    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:hint="First Name"
        android:inputType="text|textPersonName"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/surname"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Surname"
        android:textSize="20dp"
        android:layout_below="@id/email"/>

    <EditText
        android:id="@+id/editSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Enter your surname"
        android:textSize="20dp"
        android:inputType="text"
        android:layout_below="@id/viweP" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home Address"
        android:textSize="20dp"
        android:layout_below="@id/main"/>



    <EditText
        android:id="@+id/editAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Home adddress"
        android:textSize="20dp"
        android:inputType="text"
        android:layout_below="@id/view1"/>


    <TextView
        android:id="@+id/city"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="20dp"

        android:layout_below="@id/email"/>

    <EditText
        android:id="@+id/editCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Enter your city "
        android:textSize="20dp"
        android:inputType="text"
        android:layout_below="@id/viweP" />



    <TextView
        android:id="@+id/provence"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Provence"
        android:textSize="20dp"
        android:layout_below="@id/email"/>

    <EditText
        android:id="@+id/editProvence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Enter your provence "
        android:textSize="20dp"
        android:inputType="text"
        android:layout_below="@id/viweP" />

    <RadioGroup
        android:id="@+id/genders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:hint="Enter your provence "
        android:layout_below="@id/viweP">





    <RadioButton
        android:id="@+id/rdMale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Male"
        android:textSize="20dp"
        android:layout_below="@id/viweP" />

    <RadioButton
        android:id="@+id/rdFamale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Female"
        android:textSize="20dp"
        android:layout_below="@id/viweP" />
    </RadioGroup>


    <TextView
        android:id="@+id/CellPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_margin="15dp"
        android:inputType="number"
        android:text="Cellphone number"
        android:textSize="20dp" />



    <EditText
        android:id="@+id/ediCellPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/viweP"
        android:inputType="phone" />



    <RadioGroup
        android:id="@+id/userType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:layout_below="@id/viweP">

        <RadioButton
            android:id="@+id/rdDtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Recipient"
            android:textSize="20dp"
            android:layout_below="@id/viweP" />



        <RadioButton
            android:id="@+id/rdDonar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Donar"
            android:textSize="20dp"
            android:layout_below="@id/viweP" />

    </RadioGroup>



    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:layout_below="@id/rdDtype"
        android:text="LogOut" />


    <Button
        android:id="@+id/participate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:onClick="showMenu"
        android:layout_margin="15dp"
        android:text="Participate" />

    <Button
        android:id="@+id/buttonUpdateInfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:text="Update information" />




</LinearLayout>


</RelativeLayout>


</ScrollView>